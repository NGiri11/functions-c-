#include <iostream>

using namespace std;
int p(int,int);
int a(int,int);
int main()
{
    int l,b,u,v;
    cout<<"Enter the value of length and breadth";
    cin>>l>>b;
    u=p(l,b);
    v=a(l,b);
    cout<<"Area is ="<<v<<endl<<"perimeter is ="<<u;
    return 0;
}
int p(int m,int n)
{
    int c;
    c= 2*(m+n);
    return c;
}
int a(int m,int n)
{
    int c;
    c=m*n;
    return c;
}
